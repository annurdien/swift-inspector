@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=JetBrains+Mono:wght@400;600&display=swap');

.app-shell {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  padding: 2.5rem 3rem 3.5rem;
  max-width: 1400px;
  margin: 0 auto;
  height: 100vh;
}

.app-header {
  display: flex;
  justify-content: space-between;
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=JetBrains+Mono:wght@400;600&display=swap');

  .app-shell {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 2.5rem 3rem 3.5rem;
    max-width: 1400px;
    margin: 0 auto;
    height: 100vh;
  }

  .app-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1.5rem;
  }

  .app-header h1 {
    margin: 0;
    font-size: 2.4rem;
    letter-spacing: -0.02em;
  }

  .app-header p {
    margin: 0.25rem 0 0;
    color: #94a3b8;
    max-width: 48ch;
  }

  .header-actions {
    display: flex;
    gap: 0.75rem;
  }

  button.primary,
  button.ghost {
    border-radius: 999px;
    padding: 0.65rem 1.6rem;
    font-size: 0.95rem;
    font-weight: 600;
    border: 1px solid transparent;
    cursor: pointer;
    transition: transform 120ms ease, box-shadow 160ms ease, border-color 160ms ease;
  }

  button.primary {
    background: linear-gradient(135deg, #2563eb, #38bdf8);
    color: #0b1220;
    box-shadow: 0 12px 30px rgba(37, 99, 235, 0.25);
  }

  button.primary:hover:enabled {
    transform: translateY(-1px);
    box-shadow: 0 18px 36px rgba(37, 99, 235, 0.32);
  }

  button.primary:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    box-shadow: none;
  }

  button.ghost {
    background: transparent;
    border-color: rgba(148, 163, 184, 0.45);
    color: #cbd5f5;
  }

  button.ghost:hover:enabled {
    border-color: rgba(148, 163, 184, 0.8);
    transform: translateY(-1px);
  }

  .toggle-row {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    padding: 1.1rem 1.25rem;
    background: rgba(15, 23, 42, 0.65);
    border: 1px solid rgba(148, 163, 184, 0.16);
    border-radius: 18px;
    backdrop-filter: blur(16px);
  }

  .toggle {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.4rem 0.75rem 0.4rem 0.4rem;
    border-radius: 999px;
    background: rgba(15, 23, 42, 0.4);
    border: 1px solid rgba(148, 163, 184, 0.2);
    cursor: pointer;
    transition: border-color 160ms ease, background 160ms ease;
  }

  .toggle:hover {
    border-color: rgba(148, 163, 184, 0.45);
  }

  .toggle input {
    position: absolute;
    opacity: 0;
    pointer-events: none;
  }

  .toggle .indicator {
    width: 44px;
    height: 24px;
    border-radius: 999px;
    background: rgba(15, 23, 42, 0.7);
    border: 1px solid rgba(148, 163, 184, 0.4);
    position: relative;
    transition: background 160ms ease, border-color 160ms ease;
  }

  .toggle .indicator::after {
    content: '';
    position: absolute;
    top: 2px;
    left: 2px;
    width: 18px;
    height: 18px;
    border-radius: 50%;
    background: #cbd5f5;
    transition: transform 160ms ease, background 160ms ease;
  }

  .toggle input:checked + .indicator {
    background: linear-gradient(135deg, #38bdf8, #6366f1);
    border-color: transparent;
  }

  .toggle input:checked + .indicator::after {
    transform: translateX(20px);
    background: #0b1220;
  }

  .toggle .label-text {
    font-size: 0.95rem;
    color: #e2e8f0;
  }

  .error-banner {
    padding: 0.85rem 1rem;
    border-radius: 12px;
    border: 1px solid rgba(248, 113, 113, 0.45);
    background: rgba(248, 113, 113, 0.14);
    color: #fecaca;
  }

  .workspace {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 1.5rem;
    flex: 1;
    min-height: 0;
  }

  .panel {
    background: rgba(15, 23, 42, 0.75);
    border: 1px solid rgba(148, 163, 184, 0.18);
    border-radius: 20px;
    padding: 1.25rem 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    backdrop-filter: blur(14px);
    min-height: 0;
    overflow: hidden;
  }

  .panel-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
  }

  .panel-header h2 {
    margin: 0;
    font-size: 1.35rem;
  }

  .panel-header p {
    margin: 0.15rem 0 0;
    color: #94a3b8;
    font-size: 0.95rem;
  }

  .status-chip {
    padding: 0.35rem 0.9rem;
    border-radius: 999px;
    font-size: 0.85rem;
    background: rgba(56, 189, 248, 0.12);
    border: 1px solid rgba(56, 189, 248, 0.4);
    color: #bae6fd;
    white-space: nowrap;
  }

  .editor-panel,
  .output-panel {
    display: flex;
    flex-direction: column;
    min-height: 0;
  }

  .editor-container {
    flex: 1;
    min-height: 0;
    display: flex;
    border-radius: 16px;
    border: 1px solid rgba(61, 81, 128, 0.5);
    overflow: hidden;
  }

  .editor-container > div {
    flex: 1 !important;
    height: 100% !important;
  }

  .editor-container .monaco-editor {
    padding-top: 0.75rem;
  }

  .tabs {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 0.6rem;
  }

  .tab {
    background: rgba(15, 23, 42, 0.65);
    border: 1px solid rgba(148, 163, 184, 0.25);
    color: #cbd5f5;
    border-radius: 12px;
    padding: 0.55rem 0.65rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: border-color 160ms ease, background 160ms ease, transform 120ms ease;
    cursor: pointer;
  }

  .tab:hover {
    border-color: rgba(96, 165, 250, 0.6);
    transform: translateY(-1px);
  }

  .tab.active {
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.22), rgba(99, 102, 241, 0.22));
    border-color: rgba(96, 165, 250, 0.65);
    color: #f8fafc;
  }

